---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import { aboutContent } from '@data/about.ts';
import Button from '@components/ui/Button.astro';

---

<Layout title="About Cloud Native CISO">
  <InnerHero content={aboutContent.hero} />

  <section class="max-w-6xl mx-auto px-6 sm:px-8 py-40 flex flex-col gap-y-44">
    <div class="text-center max-w-3xl mx-auto mb-16"></div>
    <!-- Origin Section -->
    <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-headline)] mb-8">
        {aboutContent.origin.title}
      </h2>
      <p class="text-lg leading-relaxed text-[var(--color-body-base)]">
        {aboutContent.origin.description}
      </p>
    </div>

    <!-- Divider -->
    <div class="text-center max-w-3xl mx-auto mb-16"></div>
    <!-- Difference Section -->
    <div class="space-y-20" data-aos="fade-up" data-aos-delay="100">
      <h2 class="text-3xl sm:text-4xl font-bold text-center text-[var(--color-headline)] mb-5">
        {aboutContent.difference.title}
      </h2>
      <div class="text-center max-w-3xl mx-auto mb-8"></div>
      <div class="grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
        {aboutContent.difference.items.map(({ title, description }) => (
          <div class="bg-[var(--color-surface)] p-6 rounded-2xl shadow-md backdrop-blur-sm transition-colors border border-[var(--color-border)] hover:shadow-lg">
            <h3 class="text-xl font-semibold text-[var(--color-headline)] mb-3">{title}</h3>
            <p class="text-[var(--color-body-light)] leading-relaxed">
              {description}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="text-center max-w-3xl mx-auto mb-16"></div>

    <!-- Founder Section -->
    <div class="max-w-3xl mx-auto space-y-8 text-center" data-aos="fade-up" data-aos-delay="200">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-headline)] mb-4">
        {aboutContent.founder.title}
      </h2>
      <p class="text-lg text-[var(--color-body-base)] leading-relaxed">
        {aboutContent.founder.description}
      </p>
      <blockquote class="border-l-4 border-accent/70 pl-5 italic text-[var(--color-body-light)] mt-6">
        “{aboutContent.founder.quote}”
      </blockquote>
    </div>

    <!-- Divider -->
    <div class="text-center max-w-3xl mx-auto mb-16"></div>

    <!-- Brand Mission Section -->
    <div class="max-w-3xl mx-auto text-center space-y-6" data-aos="fade-up" data-aos-delay="300">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-headline)] mb-4">
        {aboutContent.brand.title}
      </h2>
      <p class="text-lg text-[var(--color-body-base)] leading-relaxed">
        {aboutContent.brand.description}
      </p>
    </div>

    <!-- CTA -->
    <div class="pt-20 text-center" data-aos="fade-up" data-aos-delay="400">
    <Button
        href={aboutContent.cta.href}
        variant="primary"
    >
        {aboutContent.cta.label}
    </Button>
    </div>


    <div class="text-center max-w-3xl mx-auto mb-16"></div>

  </section>
</Layout>
