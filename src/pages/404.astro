---
import Layout from '@layouts/Layout.astro';
import Button from '@components/ui/Button.astro';

const seoTitle = "404: The only vulnerability we tolerate";
const seoDescription = "The content you're looking for doesn't exist here – or no longer reflects our best thinking.";
---

<Layout title={seoTitle} description={seoDescription}>
    <div class="w-full min-h-[80vh] flex items-center">
        <div class="site-container mx-auto px-4 py-base text-center">
            <div class="max-w-2xl mx-auto">
                <h1 class="mb-4 text-9xl font-bold text-primary" data-aos="fade-up">404</h1>
                <h2 class="mb-8" data-aos="fade-up" data-aos-delay="100">The only vulnerability we tolerate.</h2>
                <p class="text-body-base mb-12" data-aos="fade-up" data-aos-delay="200">
                    This page might’ve been restructured or retired as we evolve. Head back to the homepage, or explore our latest playbooks and insights.
                </p>
                <div data-aos="fade-up" data-aos-delay="300">
                    <Button 
                        href="/" 
                        variant="primary"
                        size="lg"
                    >
                        Back to Homepage
                    </Button>
                </div>
            </div>
        </div>
    </div>
</Layout>

