---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import ToolsSection from '@components/sections/ToolsSection.astro';
import { tools } from '@data/tools';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';
import { HardDrive } from 'lucide-astro';

const seoTitle = "Cloud Native CISO | Security in a Cloud-Native World";
const seoDescription = "A real-world journey of building cloud-native security as an aspiring CISO — sharing lessons, strategies, and pitfalls from securing startups.";

const heroContent = {
    title: 'Security for Startups, Built in Public',
    description: 'No silver bullets. Just honest lessons from building security into cloud-native startups — one Git commit, incident postmortem, and YAML file at a time. For builders, leaders, and aspiring CISOs navigating complexity without a rulebook.',
    buttons: [
        {
            text: 'Start Reading',
            link: '/contact',
            target: '_self'
        },
        {
            text: 'Follow the Journey',
            link: 'https://github.com/tcpninja/cloud-native-ciso',
            target: '_blank'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "CORE PRINCIPLES",
    title: "Security That Makes Sense (and Scales)",
    description: "I\’m chasing the idea that security can be usable, effective, and not kill velocity. These are the lenses I\'m using to make sense of the chaos.",
    features: featureLists.main.features,
    button: {
        text: "Learn Our Security Philosophy",
        link: "/philosophy",  // REVIEW: we will create this later
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: 'Join the Cloud Native CISO Community',
    description: 'Cloud Native CISO is a personal, evolving journey to make modern cybersecurity accessible to fast-moving teams and leaders.',
    hideCta: false,
    button: {
        text: 'Visit Github Repo',
        link: 'https://github.com/tcpninja/cloud-native-ciso', // REVIEW: we will change this to a dedicated GH account for CNC
        target: '_blank'
    }
}

const styleGuideSection = {
    eyebrow: "The CISO Style",
    headline: "The Cloud Native CISO Approach",
    description: "Tactical, iterative, and human-centered. I’m documenting the playbook for security that doesn’t trade agility for safety.",
    image: {
        src: styleGuideImage,
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Explore the Approach",
            link: "/approach",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "",
    title: "Fast, Lean, and Cloud-Native",
    description: "Security architecture tailored for lean teams — lightweight, auditable, and built for cloud-native velocity.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Fast, Lean, and Cloud-Native",
        description: "Security architecture tailored for lean teams — lightweight, auditable, and built for cloud-native velocity.",
        button: {
            text: "How We Build It",
            link: "/philosophy",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "The Mission",
    title: "Straightforwad Security",
    description: "This isn\’t a polished playbook. It\’s a work-in-progress. If you\’ve ever googled 'how to explain Kubernetes security to a CFO' — you\’re in the right place.",
    button: {
        text: "Read the Journey",
        link: "/blog",
        variant: "primary" as const,
        target: "_self" as const
    }
};

// const toolsSection = {
//   eyebrow: "Recommended Cloud Native Security Tools",
//   tools: tools, // the imported tools array
// };

const logosSection = {
    eyebrow: "Our Clients",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "FAQs",
    title: 'Frequently Asked Questions',
    description: 'Find answers to common questions about our platform and services.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "LATEST INSIGHTS",
    title: "Latest From the Field",
    description: "Lessons learned, patterns observed, and stories from the trenches of startup security.",
    button: {
            text: "View All Posts",
            link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/>
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>