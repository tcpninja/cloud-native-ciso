---
import { getEyebrowColor } from '@utils/styleUtils';
import type { ThemeColor } from '@utils/styleUtils';

export interface Props {
    text: string;
    background?: ThemeColor;
    className?: string;
    dataAos?: string;
    dataAosDelay?: string;
}

const {
    text,
    background = 'base',
    className = '',
    dataAos = 'fade-up',
    dataAosDelay
} = Astro.props;

const eyebrowColor = getEyebrowColor(background);
---
<div 
    class:list={[
        eyebrowColor, 
        'text-xs font-semibold tracking-widest uppercase mb-3',
        className
    ]} 
    data-aos={dataAos}
    {...dataAosDelay && { 'data-aos-delay': dataAosDelay }}
>
    {text}
</div> 