---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SEO, siteConfig, themeSetting, defaultOgImage } from "../data/config";
import 'aos/dist/aos.css';

const { title, description, image, footerCta, canonicalUrl } = Astro.props;
const { theme } = themeSetting;
const { SiteName, Separator, defaultDescription } = SEO;

const pageTitle = title ? `${title} ${Separator} ${SiteName}` : SiteName;
const pageDescription = description || defaultDescription || '';
const pageImage = image || defaultOgImage;
const canonicalPath = canonicalUrl || Astro.url.pathname;
const fullCanonicalUrl = new URL(canonicalPath, siteConfig.siteUrl).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Theme Initialization Script -->
    <script>
      (function() {
        const root = document.documentElement;
        let theme = localStorage.getItem('theme') || 'system';
        if (theme === 'system') {
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          theme = prefersDark ? 'dark' : 'light';
        }
        root.setAttribute('data-theme', theme);
        root.classList.add('js');
      })();
    </script>

    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={fullCanonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:locale" content="en_US" />

    <!-- Favicon & Icons -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&display=swap" rel="stylesheet" />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@400,700&display=swap" rel="stylesheet" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:site_name" content={SiteName} />
    <meta property="og:image" content={new URL(pageImage, siteConfig.siteUrl).toString()} />
    <meta property="og:image:alt" content="Cloud Native CISO brand preview" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={fullCanonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={new URL(pageImage, siteConfig.siteUrl).toString()} />
    <!-- Optional: <meta name="twitter:creator" content="@yourhandle" /> -->
	<!-- <meta name="twitter:creator" content="@yourhandle" /> -->
  	<!-- <meta name="twitter:site" content="@yourhandle" /> -->
  </head>

  <body>
    <!-- Accessibility: Skip Link -->
    <a href="#main-content" class="skip-link">Skip to content</a>

    <Header />
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
    <Footer footerCta={footerCta} />

    <!-- Scripts -->
    <script type="module" src="/src/scripts/initAos.js"></script>
    <script type="module" is:raw>
      import { initCodeCopy } from '/src/scripts/copyCode.js';
      document.addEventListener('DOMContentLoaded', initCodeCopy);
    </script>
  </body>
</html>
